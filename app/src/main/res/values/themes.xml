<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubYangKe3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <item name="android:windowBackground">@color/light_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <item name="android:windowBackground">@color/light_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="TextContent.TitleDetails">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/tilt_warp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="TextContent.SubtitleDetails">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/alkatra</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="TextContent.SubtitleDetails.Username">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/alkatra</item>
        <item name="android:textColor">@color/soft_brown</item>
    </style>

    <style name="TextContent.SubtitleDetails.Website">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/alkatra</item>
        <item name="android:textColor">@color/soft_brown</item>
    </style>

    <style name="TextContent.Details">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/tilt_warp</item>\
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="TextContent.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
</resources>